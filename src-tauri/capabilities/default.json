{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main",
	"palette" 
  ],
  "permissions": [
    "core:default",
	"core:window:allow-hide",
    "opener:default",
    "dialog:default",
    "notification:default",
    "log:default",
    "store:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "**" }
      ]
    }
  ]
}